<!DOCTYPE html>
{% load static %}

<html>
        <head>
            <title>Title for the index</title>
        </head>

        <body>
            <h1>It is put forth that...</h1>
            {% if categories %}
                <ul>
                    {% for category in categories %}
                    <li>{{ category.name }}</li>
                    {% endfor %}
                 </ul>
            {% else %}
                <strong>No categories</strong>
            {% endif %}

            <a href="/apprang/about/">About</a>
            <a href="/apprang/category/">Category</a>
            <img src="{% static "corn.png" %}" alt="Picture of corn">
        </body>
</html>
